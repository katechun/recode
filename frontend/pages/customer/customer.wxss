/* pages/customer/customer.wxss */
.container {
  padding: 30rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

/* 筛选区域 */
.filter-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.store-filter {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  padding: 10rpx 20rpx;
  background-color: #f5f7fa;
  border-radius: 8rpx;
}

.dropdown-icon {
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 10rpx solid #666;
  margin-left: 10rpx;
}

/* 客户列表 */
.customer-list {
  width: 100%;
}

.customer-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.customer-info {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.customer-name {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.customer-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
}

.store-name {
  background-color: #e6f7ff;
  color: #1890ff;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.phone {
  color: #999;
}

.customer-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.stat-value.positive {
  color: #52c41a;
}

.progress-bar-container {
  width: 100%;
  height: 8rpx;
  background-color: #f5f5f5;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.progress-bar {
  height: 100%;
  background-color: #1890ff;
  border-radius: 4rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  text-align: right;
}

/* 加载提示 */
.loading-container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: #666;
  font-size: 28rpx;
}

.no-more-tip {
  text-align: center;
  color: #999;
  padding: 30rpx 0;
  font-size: 26rpx;
}

.empty-tip {
  text-align: center;
  color: #999;
  padding: 100rpx 0;
  font-size: 28rpx;
}

/* 添加按钮 */
.add-btn {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #1890ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(24, 144, 255, 0.3);
  z-index: 10;
}

.add-icon {
  color: #fff;
  font-size: 60rpx;
}

/* 店铺选择弹窗 */
.store-picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
  display: flex;
  justify-content: center;
  align-items: center;
}

.store-picker {
  width: 80%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.store-picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.close-icon {
  font-size: 40rpx;
  color: #999;
}

.store-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.store-item {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 28rpx;
}

.store-item.active {
  color: #1890ff;
  background-color: rgba(24, 144, 255, 0.1);
} 