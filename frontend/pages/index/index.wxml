<!--index.wxml-->
<scroll-view class="scrollarea" scroll-y type="list" refresher-enabled="{{true}}" 
             refresher-triggered="{{isRefreshing}}" bindrefresherrefresh="onPullRefresh">
  <view class="container">
    <!-- 顶部用户信息和设置区域 -->
    <view class="top-section">
      <view class="user-info-card">
        <image class="avatar" src="{{userInfo.avatar || 'https://mmbiz.qpic.cn/mmbiz/icTdbqWNOwNRna42FI242Lcia07jQodd2FJGIYQfG0LAJGFxM4FbnQP6yfMxBgJ0F3YRqJCJ1aPAK2dQagdusBZg/0'}}" mode="aspectFill"></image>
        <view class="user-basic-info">
          <text class="nickname">{{userInfo.nickname || userInfo.username}}</text>
          <text class="role {{isAdmin ? 'admin-role' : 'staff-role'}}">{{isAdmin ? '管理员' : '店员'}}</text>
        </view>
      </view>
      
      <!-- 优化默认设置按钮 -->
      <view class="default-settings-btn" bindtap="showDefaultSettings" hover-class="btn-hover">
        <text class="settings-btn-icon">⚙️</text>
        <text class="settings-btn-text">记账默认</text>
      </view>
    </view>
    
    <!-- 顶部统计卡片 -->
    <view class="header">
      <view class="filter-bar">
        <picker mode="selector" range="{{dateOptions}}" bindchange="bindDateRangeChange">
          <view class="date-range">
            <text>{{dateRange}}</text>
            <text class="dropdown-icon">▼</text>
          </view>
        </picker>
        
        <view class="store-selector">
          <text>当前店铺：</text>
          <picker mode="selector" range="{{stores}}" range-key="name" bindchange="storeChange">
            <view class="picker">
              <text class="{{!selectedStoreName ? 'placeholder-text' : ''}}">{{selectedStoreName || '请选择店铺'}}</text>
              <text class="arrow">▼</text>
            </view>
          </picker>
        </view>
      </view>
      
      <view class="stats-card">
        <view class="stats-item">
          <text class="stats-label">收入</text>
          <text class="stats-value income">¥{{totalIncome || '0.00'}}</text>
        </view>
        <view class="stats-item">
          <text class="stats-label">支出</text>
          <text class="stats-value expense">¥{{totalExpense || '0.00'}}</text>
        </view>
        <view class="stats-item">
          <text class="stats-label">结余</text>
          <text class="stats-value {{netAmount >= 0 ? 'income' : 'expense'}}">¥{{netAmount || '0.00'}}</text>
        </view>
      </view>
      
      <!-- 优化加载指示器 -->
      <view class="loading-indicator" wx:if="{{isLoading}}">
        <view class="loading-spinner"></view>
        <text class="loading-text">加载中...</text>
      </view>
    </view>
    
    <!-- 今日数据概览 -->
    <view class="data-overview card">
      <view class="card-title">
        <text class="title-text">今日数据</text>
        <text class="today-date">{{todayDateStr}}</text>
      </view>
      <view class="overview-content">
        <view class="overview-item">
          <text class="overview-label">收入</text>
          <text class="overview-value income">¥{{todayIncome || '0.00'}}</text>
          <view class="overview-icon income-icon">+</view>
        </view>
        <view class="overview-item">
          <text class="overview-label">支出</text>
          <text class="overview-value expense">¥{{todayExpense || '0.00'}}</text>
          <view class="overview-icon expense-icon">-</view>
        </view>
      </view>
    </view>
    
    <!-- 近期账务记录部分 -->
    <view class="recent-records card">
      <view class="record-header">
        <text class="card-title">近期记录</text>
        <view class="quick-account-btns">
          <view class="quick-btn income" bindtap="goToAddAccount" data-type="income">
            <text class="quick-btn-icon">+</text>
            <text class="quick-btn-text">收入</text>
          </view>
          <view class="quick-btn expense" bindtap="goToAddAccount" data-type="expense">
            <text class="quick-btn-icon">-</text>
            <text class="quick-btn-text">支出</text>
          </view>
        </view>
      </view>
      <view class="record-empty" wx:if="{{recentAccounts.length === 0}}">
        <view class="empty-icon">📋</view>
        <text class="empty-text">暂无近期账务记录</text>
        <text class="empty-subtext">点击上方按钮添加记账</text>
      </view>
      <view class="record-list" wx:else>
        <view class="record-item" wx:for="{{recentAccounts}}" wx:key="id" bindtap="showAccountDetail" data-account="{{item}}">
          <view class="record-left">
            <text class="record-title">{{item.description || '无描述'}}</text>
            <view class="record-details">
              <text class="record-type">{{item.type_name}}</text>
              <text class="record-separator">|</text>
              <text class="record-store">{{item.store_name}}</text>
              <text class="record-time">{{item.create_time || '未知时间'}}</text>
            </view>
          </view>
          <view class="record-right">
            <text class="record-amount {{item.account_type === 1 ? 'income' : 'expense'}}">
              {{item.account_type === 1 ? '+' : '-'}}{{item.amount}}
            </text>
            <text class="record-date">{{item.create_time}}</text>
          </view>
        </view>
      </view>
      <view class="record-more" bindtap="goToAccountList">
        <text>查看更多记录</text>
        <text class="arrow">→</text>
      </view>
    </view>
    
    <!-- 管理功能区域移动到最近账目下面 -->
    <block wx:if="{{isAdmin}}">
      <view class="admin-functions">
        <view class="section-title">
          <view class="title-line"></view>
          <text>管理功能</text>
          <view class="title-line"></view>
        </view>
        <view class="function-list">
          <view class="function-item" bindtap="goToStoreManage" hover-class="function-item-hover">
            <text class="function-icon">🏪</text>
            <text class="function-text">店铺管理</text>
          </view>
          <view class="function-item" bindtap="goToUserManage" hover-class="function-item-hover">
            <text class="function-icon">👤</text>
            <text class="function-text">用户管理</text>
          </view>
          <view class="function-item" bindtap="goToAccountType" hover-class="function-item-hover">
            <text class="function-icon">📊</text>
            <text class="function-text">账务类型</text>
          </view>
        </view>
      </view>
    </block>
    
    <!-- 优化退出登录按钮 -->
    <view class="logout-btn" bindtap="logout" hover-class="logout-btn-hover">
      <text class="logout-icon">🚪</text>
      <text>退出登录</text>
    </view>
    
    <!-- 店铺选择弹窗 -->
    <view class="store-picker-mask" wx:if="{{storePickerVisible}}" bindtap="closeStorePicker">
      <view class="store-picker" catchtap="stopPropagation">
        <view class="store-picker-header">
          <text>选择店铺</text>
          <view class="close-icon" bindtap="closeStorePicker">×</view>
        </view>
        <view class="store-list">
          <view class="store-item {{(selectedStoreId === item.id) ? 'active' : ''}}" 
            wx:for="{{stores || []}}" 
            wx:key="id" 
            data-index="{{index}}" 
            bindtap="selectStore">
            {{item.name || ''}}
          </view>
        </view>
      </view>
    </view>

    <!-- 优化记账默认设置弹窗 -->
    <view class="settings-modal-mask {{showDefaultSettings ? 'visible' : ''}}" bindtap="closeDefaultSettings">
      <view class="settings-modal-container" catchtap="stopPropagation">
        <view class="settings-modal-header">
          <text class="settings-modal-title">记账默认设置</text>
          <view class="settings-modal-close" bindtap="closeDefaultSettings">×</view>
        </view>
        
        <view class="settings-modal-content">
          <view class="settings-modal-item">
            <text class="settings-modal-label">店铺设置</text>
            <picker mode="selector" 
                    range="{{stores}}" 
                    range-key="name" 
                    value="{{storeIndex}}" 
                    bindchange="bindStoreChange">
              <view class="settings-modal-picker {{!selectedStore ? 'empty' : ''}}">
                <text>{{selectedStore ? selectedStore.name : '请选择店铺'}}</text>
                <text class="settings-modal-arrow">▼</text>
              </view>
            </picker>
          </view>
          
          <view class="settings-modal-section">
            <text class="settings-modal-label">默认收入类型</text>
            <picker mode="selector" 
                    range="{{incomeTypes || []}}" 
                    range-key="name" 
                    value="{{incomeTypeIndex}}" 
                    bindchange="bindIncomeTypeChange">
              <view class="settings-modal-picker {{!selectedIncomeType ? 'empty' : ''}}">
                <text>{{selectedIncomeType ? selectedIncomeType.name : '请选择收入类型'}}</text>
                <text class="settings-modal-arrow">▼</text>
              </view>
            </picker>
          </view>
          
          <view class="settings-modal-section">
            <text class="settings-modal-label">默认支出类型</text>
            <picker mode="selector" 
                    range="{{expenseTypes || []}}" 
                    range-key="name" 
                    value="{{expenseTypeIndex}}" 
                    bindchange="bindExpenseTypeChange">
              <view class="settings-modal-picker {{!selectedExpenseType ? 'empty' : ''}}">
                <text>{{selectedExpenseType ? selectedExpenseType.name : '请选择支出类型'}}</text>
                <text class="settings-modal-arrow">▼</text>
              </view>
            </picker>
          </view>
        </view>
        
        <view class="settings-modal-footer">
          <button class="settings-modal-btn cancel" bindtap="closeDefaultSettings">取消</button>
          <button class="settings-modal-btn confirm" bindtap="saveDefaultSettings">保存</button>
        </view>
      </view>
    </view>

    <!-- 添加在现有视图适当位置 -->
    <view class="loading-container" wx:if="{{isLoading}}">
      <view class="loading-spinner"></view>
      <text class="loading-text">加载中...</text>
    </view>

    <view class="error-container" wx:if="{{loadError && !isLoading}}">
      <icon type="warn" size="40"></icon>
      <text class="error-text">{{loadError}}</text>
      <button class="retry-btn" bindtap="refreshData">重试</button>
    </view>

    <!-- 添加账目详情弹窗 -->
    <view class="account-detail-modal" wx:if="{{showAccountDetail}}">
      <view class="account-detail-mask" bindtap="hideAccountDetail"></view>
      <view class="account-detail-content">
        <view class="account-detail-header">
          <text class="account-detail-title">记账详情</text>
          <text class="account-detail-close" bindtap="hideAccountDetail">×</text>
        </view>
        <view class="account-detail-body">
          <view class="detail-amount {{currentAccount.account_type === 1 ? 'income' : 'expense'}}">
            {{currentAccount.account_type === 1 ? '+' : '-'}}¥{{currentAccount.amount}}
          </view>
          
          <view class="detail-item">
            <text class="detail-label">描述</text>
            <text class="detail-value">{{currentAccount.description || '无描述'}}</text>
          </view>
          
          <view class="detail-item">
            <text class="detail-label">类型</text>
            <text class="detail-value">{{currentAccount.type_name}}</text>
          </view>
          
          <view class="detail-item">
            <text class="detail-label">店铺</text>
            <text class="detail-value">{{currentAccount.store_name}}</text>
          </view>
          
          <view class="detail-item">
            <text class="detail-label">时间</text>
            <text class="detail-value">{{currentAccount.create_time_full || currentAccount.create_time}}</text>
          </view>
          
          <view class="detail-item" wx:if="{{currentAccount.remark}}">
            <text class="detail-label">备注</text>
            <text class="detail-value">{{currentAccount.remark}}</text>
          </view>
        </view>
        
        <view class="account-detail-footer">
          <button class="detail-btn edit" bindtap="editAccount">编辑</button>
          <button class="detail-btn delete" bindtap="deleteAccount">删除</button>
        </view>
      </view>
    </view>
  </view>
</scroll-view>

<!-- 在主内容外层添加条件渲染 -->
<view wx:if="{{isFirstLoad}}" class="skeleton-screen">
  <view class="skeleton-header"></view>
  <view class="skeleton-card">
    <view class="skeleton-row"></view>
    <view class="skeleton-row small"></view>
  </view>
  <view class="skeleton-stats">
    <view class="skeleton-stat"></view>
    <view class="skeleton-stat"></view>
  </view>
  <view class="skeleton-list">
    <view class="skeleton-item" wx:for="{{3}}" wx:key="index">
      <view class="skeleton-item-left">
        <view class="skeleton-title"></view>
        <view class="skeleton-subtitle"></view>
      </view>
      <view class="skeleton-item-right">
        <view class="skeleton-amount"></view>
      </view>
    </view>
  </view>
</view>
