/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.header-card {
  margin-top: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-detail {
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.role {
  font-size: 24rpx;
  color: #666;
}

.overview-content {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}

.overview-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.overview-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.overview-value {
  font-size: 36rpx;
  font-weight: 500;
}

.income {
  color: #52c41a;
}

.expense {
  color: #f5222d;
}

.action-list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.action-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666;
}

.account-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.account-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.account-item:last-child {
  border-bottom: none;
}

.account-info {
  display: flex;
  flex-direction: column;
}

.account-store {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.account-type {
  font-size: 24rpx;
  color: #999;
}

.account-detail {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.account-amount {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.account-time {
  font-size: 24rpx;
  color: #999;
}

.no-data {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  color: #f5222d;
  font-size: 30rpx;
  border-radius: 8rpx;
