  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: #666;
  font-size: 28rpx;
}

.error-container {
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 12rpx;
  margin: 20rpx 0;
}

.error-text {
  margin: 20rpx 0;
  color: #ff4d4f;
  font-size: 28rpx;
  text-align: center;
}

.retry-btn {
  margin-top: 20rpx;
  background: #f5f5f5;
  color: #333;
  font-size: 28rpx;
  padding: 10rpx 40rpx;
  border-radius: 30rpx;
}

/* 空数据状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  color: #ccc;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin: 20rpx 0;
}

.empty-action {
  font-size: 28rpx;
  color: #1aad19;
  border: 1rpx solid #1aad19;
  border-radius: 30rpx;
  padding: 10rpx 30rpx;
  margin-top: 10rpx;
}

/* 骨架屏样式 */
.skeleton-screen {
  padding: 30rpx;
}

.skeleton-header, .skeleton-row, .skeleton-title, .skeleton-subtitle, .skeleton-amount, .skeleton-stat {
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 37%, #f2f2f2 63%);
  background-size: 400% 100%;
  animation: skeleton-loading 1.4s ease infinite;
  border-radius: 8rpx;
}

@keyframes skeleton-loading {
  0% { background-position: 100% 50%; }
  100% { background-position: 0 50%; }
}

.skeleton-header {
  height: 120rpx;
  margin-bottom: 30rpx;
}

.skeleton-card {
  padding: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.skeleton-row {
  height: 40rpx;
  margin-bottom: 20rpx;
}

.skeleton-row.small {
  width: 60%;
  height: 30rpx;
}

.skeleton-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.skeleton-stat {
  width: 48%;
  height: 150rpx;
}

.skeleton-list {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.skeleton-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.skeleton-item-left {
  width: 60%;
}

.skeleton-title {
  height: 32rpx;
  margin-bottom: 12rpx;
}

.skeleton-subtitle {
  height: 24rpx;
  width: 70%;
}

.skeleton-item-right {
  width: 30%;
  display: flex;
  justify-content: flex-end;
}

.skeleton-amount {
  height: 40rpx;
  width: 80%;
}

/* 优化账目详情弹窗 */
.detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.detail-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.65);
  backdrop-filter: blur(2px);
}

.detail-container {
  position: relative;
  width: 90%;
  max-width: 650rpx;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  z-index: 1001;
  display: flex;
  flex-direction: column;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
  animation: slideUp 0.3s ease;
  transform: translateZ(0);
}

@keyframes slideUp {
  from { transform: translateY(50rpx); opacity: 0.8; }
  to { transform: translateY(0); opacity: 1; }
}

/* 标题栏样式优化 */
.detail-header {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 24rpx;
  border-bottom: 1rpx solid #eee;
}

.detail-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
}

.detail-close {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 44rpx;
  color: #999;
  line-height: 1;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.detail-close:active {
  background-color: #f5f5f5;
}

/* 添加收支类型标识 */
.detail-type-indicator {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 8rpx;
}

.detail-type-indicator.income {
  background-color: #1aad19;
}

.detail-type-indicator.expense {
  background-color: #f5222d;
}

/* 内容区域样式优化 */
.detail-body {
  padding: 30rpx 40rpx;
  max-height: 60vh;
  overflow-y: auto;
}

/* 金额行特殊样式 */
.detail-row.amount-row {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx dashed #eee;
}

.detail-row {
  display: flex;
  margin-bottom: 24rpx;
  align-items: flex-start;
}

.detail-row:last-child {
  margin-bottom: 0;
}

.detail-label {
  width: 140rpx;
  color: #888;
  font-size: 28rpx;
  line-height: 1.5;
}

.detail-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  word-break: break-all;
}

/* 金额显示特殊处理 */
.detail-value.amount {
  font-size: 44rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
}

.detail-value.amount .currency {
  font-size: 32rpx;
  margin-right: 4rpx;
  font-weight: normal;
  padding-bottom: 2rpx; /* 微调货币符号位置 */
}

.detail-value.income {
  color: #1aad19;
}

.detail-value.expense {
  color: #f5222d;
}

.detail-value.remark {
  white-space: pre-wrap;
  background-color: #f9f9f9;
  padding: 16rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  line-height: 1.6;
}

/* 底部按钮区域 */
.detail-footer {
  display: flex;
  padding: 24rpx 30rpx 40rpx;
  border-top: 1rpx solid #f5f5f5;
}

.detail-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 30rpx;
  margin: 0 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.detail-btn.edit {
  background-color: #1890ff;
  color: white;
}

.detail-btn.delete {
  background-color: #ff4d4f;
  color: white;
}

.detail-btn-icon {
  margin-right: 8rpx;
  font-size: 32rpx;
}
