.admin-functions {
  margin: 30rpx 0;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  color: #333;
  font-size: 30rpx;
  font-weight: 500;
}

.title-line {
  height: 1rpx;
  background-color: #eee;
  flex: 1;
}

.section-title text {
  padding: 0 20rpx;
}

.function-list {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.function-item {
  width: 28%;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 12rpx;
  background-color: #f9f9f9;
  transition: all 0.3s ease;
}

.function-item-hover {
  background-color: #f0f0f0;
  transform: translateY(-5rpx);
}

.function-icon {
  font-size: 48rpx;
  display: block;
  margin-bottom: 10rpx;
}

/* 退出登录按钮优化 */
.logout-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  color: #f5222d;
  font-size: 30rpx;
  border-radius: 8rpx;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.logout-btn-hover {
  background-color: #fff5f5;
}

.logout-icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

/* 占位符文本样式 */
.placeholder-text {
  color: #bbb;
}
