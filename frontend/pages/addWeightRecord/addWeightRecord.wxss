/* pages/addWeightRecord/addWeightRecord.wxss */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.form-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-group {
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 90rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  border: 1rpx solid #e0e0e0;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  border: 1rpx solid #e0e0e0;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.date-picker {
  width: 100%;
  height: 90rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  border: 1rpx solid #e0e0e0;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.date-icon {
  width: 40rpx;
  height: 40rpx;
}

.date-icon image {
  width: 100%;
  height: 100%;
}

.date-value {
  font-size: 28rpx;
  color: #333;
}

.button-group {
  display: flex;
  justify-content: space-between;
  margin-top: 60rpx;
}

.btn-cancel, .btn-save {
  width: 48%;
  height: 90rpx;
  border-radius: 8rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid #ddd;
}

.btn-save {
  background-color: #4CAF50;
  color: #fff;
}

/* 日期选择器相关样式 */
.calendar-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.calendar-container {
  width: 80%;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.calendar-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.calendar-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.calendar-close {
  font-size: 40rpx;
  color: #999;
  font-weight: 300;
  padding: 0 20rpx;
}

.date-picker-view {
  height: 400rpx;
  width: 100%;
}

.calendar-footer {
  padding: 20rpx;
  display: flex;
  justify-content: flex-end;
  border-top: 1rpx solid #eee;
}

.calendar-btn {
  padding: 0 30rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 6rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
}

.calendar-confirm {
  background-color: #4CAF50;
  color: #fff;
}

/* 加载中遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.7);
  z-index: 9999;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1.5s linear infinite;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 