/* pages/report/report.wxss */
.tips {
  text-align: center;
  padding: 50rpx 0;
  color: #999;
  font-size: 28rpx;
}

.filter-bar {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.date-picker, .store-picker {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.date-label, .store-label {
  font-size: 28rpx;
  color: #666;
}

.date-value, .store-value {
  font-size: 28rpx;
  color: #333;
}

.report-tabs {
  display: flex;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #1aad19;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 20%;
  width: 60%;
  height: 6rpx;
  background-color: #1aad19;
  border-radius: 3rpx;
}

.empty-tip {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

.data-list {
  padding: 20rpx 0;
}

.data-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.data-item:last-child {
  border-bottom: none;
}

.data-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.data-name {
  font-size: 28rpx;
  color: #333;
}

.data-count {
  font-size: 24rpx;
  color: #999;
}

.data-value-container {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.data-value {
  font-size: 32rpx;
  font-weight: bold;
}

.data-percentage {
  font-size: 24rpx;
  color: #999;
  padding-top: 8rpx;
}

.progress-bar {
  height: 10rpx;
  background-color: #f5f5f5;
  border-radius: 5rpx;
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  border-radius: 5rpx;
}

.income {
  color: #52c41a;
}

.expense {
  color: #f5222d;
}

.progress-inner.income {
  background-color: #52c41a;
}

.progress-inner.expense {
  background-color: #f5222d;
}