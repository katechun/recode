/* pages/report/report.wxss */
.tips {
  text-align: center;
  padding: 50rpx 0;
  color: #999;
  font-size: 28rpx;
}

.filter-bar {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.date-picker, .store-picker {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.date-label, .store-label {
  font-size: 28rpx;
  color: #666;
}

.date-value, .store-value {
  font-size: 28rpx;
  color: #333;
}

.report-tabs {
  display: flex;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #1aad19;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 20%;
  width: 60%;
  height: 6rpx;
  background-color: #1aad19;
  border-radius: 3rpx;
}

.empty-tip {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

.data-list {
  padding: 20rpx 0;
}

.data-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.data-item:last-child {
  border-bottom: none;
}

.data-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.data-name {
  font-size: 28rpx;
  color: #333;
}

.data-count {
  font-size: 24rpx;
  color: #999;
}

.data-value-container {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.data-value {
  font-size: 32rpx;
  font-weight: bold;
}

.data-percentage {
  font-size: 24rpx;
  color: #999;
  padding-top: 8rpx;
}

.progress-bar {
  height: 10rpx;
  background-color: #f5f5f5;
  border-radius: 5rpx;
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  border-radius: 5rpx;
}

.income {
  color: #52c41a;
}

.expense {
  color: #f5222d;
}

.progress-inner.income {
  background-color: #52c41a;
}

.progress-inner.expense {
  background-color: #f5222d;
}

/* 页面整体样式 */
.container {
  padding: 30rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

/* 顶部筛选区域 */
.filter-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.date-filter {
  display: flex;
  border-radius: 8rpx;
  background-color: #f5f7fa;
  overflow: hidden;
}

.date-item {
  padding: 10rpx 24rpx;
  font-size: 26rpx;
  color: #666;
}

.date-item.active {
  color: #fff;
  background-color: #1890ff;
}

.store-filter {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #333;
}

.dropdown-icon {
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 10rpx solid #666;
  margin-left: 10rpx;
}

/* 数据概览卡片 */
.overview-card {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.overview-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.overview-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.overview-value {
  font-size: 36rpx;
  font-weight: 500;
}

.income {
  color: #52c41a;
}

.expense {
  color: #f5222d;
}

/* 图表区域 */
.chart-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.chart-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.chart-tabs {
  display: flex;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.chart-tab {
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.chart-tab.active {
  color: #1890ff;
}

.chart-tab.active:after {
  content: '';
  position: absolute;
  bottom: -1rpx;
  left: 24rpx;
  right: 24rpx;
  height: 4rpx;
  background-color: #1890ff;
  border-radius: 2rpx;
}

.chart-container {
  height: 400rpx;
  position: relative;
}

.trend-chart,
.compare-chart {
  width: 100%;
  height: 100%;
}

.hidden {
  display: none;
}

/* 分类统计 */
.category-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.category-tabs {
  display: flex;
  margin-bottom: 20rpx;
}

.category-tab {
  padding: 10rpx 30rpx;
  font-size: 26rpx;
  color: #666;
  background-color: #f5f7fa;
  border-radius: 6rpx;
  margin-right: 20rpx;
}

.category-tab.active {
  color: #fff;
  background-color: #1890ff;
}

.category-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.category-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.category-info {
  flex: 1;
  margin-right: 30rpx;
}

.category-name {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  display: block;
}

.category-bar-container {
  width: 100%;
  height: 12rpx;
  background-color: #f5f5f5;
  border-radius: 6rpx;
  overflow: hidden;
}

.category-bar {
  height: 100%;
  border-radius: 6rpx;
}

.category-amount {
  text-align: right;
  font-size: 28rpx;
  font-weight: 500;
}

.category-percentage {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

.empty-tip {
  text-align: center;
  color: #999;
  padding: 30rpx 0;
  font-size: 28rpx;
}

/* 店铺选择弹窗 */
.store-picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
  display: flex;
  justify-content: center;
  align-items: center;
}

.store-picker {
  width: 80%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.store-picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.close-icon {
  font-size: 40rpx;
  color: #999;
}

.store-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.store-item {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 28rpx;
}

.store-item.active {
  color: #1890ff;
  background-color: rgba(24, 144, 255, 0.1);
}

/* 加载状态 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 200;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}