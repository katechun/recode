/* pages/addAccount/addAccount.wxss */
.container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  margin-bottom: 40rpx;
}

.tab-bar {
  display: flex;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 32rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background-color: #07c160;
  color: #fff;
  font-weight: bold;
}

.tab-item:first-child.active {
  background-color: #07c160;
}

.tab-item:last-child.active {
  background-color: #ff5a5f;
}

.form-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  flex: 1;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

/* 金额输入区域样式 */
.amount-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 40rpx;
}

.currency-symbol {
  font-size: 48rpx;
  color: #333;
  margin-right: 10rpx;
}

.amount-input {
  font-size: 60rpx;
  font-weight: bold;
  height: 120rpx;
  border: none;
  text-align: center;
  padding: 0;
}

.form-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  background-color: #fafafa;
}

.form-picker.placeholder {
  color: #999;
}

.picker-arrow {
  color: #999;
  font-size: 24rpx;
}

.missing-type-tip {
  font-size: 24rpx;
  color: #ff5a5f;
  margin-top: 6rpx;
}

.button-group {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.btn {
  width: 45%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 32rpx;
  transition: all 0.3s;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.submit-btn {
  background-color: #07c160;
  color: #fff;
}

.submit-btn[disabled] {
  opacity: 0.6;
  background-color: #a0ddba;
}

/* 日期时间选择器样式 */
.datetime-container {
  display: flex;
  flex-direction: column;
}

.datetime-pickers {
  display: flex;
  flex-direction: row;
  gap: 20rpx;
}

.date-picker, .time-picker {
  flex: 1;
}

.mini-picker {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  padding: 16rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.datetime-icon {
  margin-right: 8rpx;
  font-size: 28rpx;
}

/* 底部提示文字 */
.tip-text {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 20rpx 0;
}

.recorder-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.recorder-value {
  font-size: 28rpx;
  color: #333333;
  background-color: #f9f9f9;
  padding: 10rpx 20rpx;
  border-radius: 6rpx;
} 