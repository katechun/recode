/* pages/addAccount/addAccount.wxss */
.container {
  padding: 30rpx;
}

.header {
  margin-bottom: 40rpx;
}

.tab-bar {
  display: flex;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  overflow: hidden;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 30rpx;
}

.tab-item.active {
  background-color: #07c160;
  color: #fff;
  font-weight: bold;
}

.tab-item:first-child.active {
  background-color: #07c160;
}

.tab-item:last-child.active {
  background-color: #ff5a5f;
}

.form-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.amount-input {
  font-size: 36rpx;
  font-weight: bold;
  height: 100rpx;
}

.form-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
}

.picker-arrow {
  color: #999;
  font-size: 24rpx;
}

.button-group {
  display: flex;
  justify-content: space-between;
}

.btn {
  width: 45%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 32rpx;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.submit-btn {
  background-color: #07c160;
  color: #fff;
}

/* 添加样式让日期和时间选择器并排 */
.datetime-container {
  display: flex;
  align-items: center;
}

.datetime-pickers {
  display: flex;
  flex-direction: row;
  flex: 1;
}

.date-picker, .time-picker {
  flex: 1;
  padding: 0 5rpx;
}

.mini-picker {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  padding: 10rpx;
  border-radius: 4rpx;
}

.date-picker .mini-picker {
  border-right: 1rpx solid #eee;
} 