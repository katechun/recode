/* 搜索栏样式 */
.search-bar {
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 10;
}

.search-input-container {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 20rpx;
  flex: 1;
  height: 72rpx;
}

.search-icon {
  margin-right: 10rpx;
  color: #999;
  font-size: 28rpx;
}

.search-input {
  flex: 1;
  height: 72rpx;
  font-size: 28rpx;
}

.clear-icon {
  color: #999;
  font-size: 36rpx;
}

.filter-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #576b95;
}

.filter-icon {
  font-size: 24rpx;
  margin-left: 6rpx;
}

/* 筛选面板样式 */
.filter-panel {
  background-color: #fff;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-section {
  margin-bottom: 30rpx;
}

.filter-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
  display: block;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
}

.filter-option {
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  border-radius: 6rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #666;
}

.filter-option.active {
  background-color: #e6f7ff;
  color: #1890ff;
  border: 1rpx solid #91d5ff;
}

.date-picker-row {
  display: flex;
  align-items: center;
}

.date-picker {
  background-color: #f5f5f5;
  padding: 12rpx 24rpx;
  border-radius: 6rpx;
  flex: 1;
  font-size: 26rpx;
}

.date-separator {
  margin: 0 20rpx;
  color: #999;
}

.filter-buttons {
  display: flex;
  margin-top: 30rpx;
}

.filter-reset-btn {
  flex: 1;
  background-color: #f5f5f5;
  color: #666;
  margin-right: 10rpx;
  font-size: 28rpx;
}

.filter-apply-btn {
  flex: 1;
  background-color: #1890ff;
  color: #fff;
  margin-left: 10rpx;
  font-size: 28rpx;
} 