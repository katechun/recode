/* 容器和基础样式 */
.container {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
  width: 100%;
  height: 100vh;
  position: relative;
  background-color: #f5f7fa;
}

/* 搜索和筛选栏 */
.search-filter-bar {
  display: flex;
  padding: 15rpx 20rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
  z-index: 10;
  align-items: center;
}

.search-box {
  flex: 1;
  height: 70rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  position: relative;
}

.search-box input {
  flex: 1;
  height: 70rpx;
  font-size: 28rpx;
  padding-right: 80rpx;
}

.search-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  position: absolute;
  right: 10rpx;
  color: #07c160;
}

.search-clear {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background-color: #cccccc;
  color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  position: absolute;
  right: 70rpx;
  top: 50%;
  transform: translateY(-50%);
}

.filter-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
  position: relative;
  height: 70rpx;
  width: 120rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
}

.filter-btn.active {
  color: #07c160;
  font-weight: bold;
  background-color: #e7f7e9;
}

.filter-icon {
  margin-left: 6rpx;
  font-size: 24rpx;
}

.filter-badge {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  min-width: 30rpx;
  height: 30rpx;
  border-radius: 15rpx;
  background-color: #ff5a5f;
  color: #fff;
  font-size: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 6rpx;
}

/* 活跃筛选标签 */
.active-filters {
  background-color: #f8f8f8;
  padding: 15rpx 20rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-tags-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx;
  margin-bottom: 10rpx;
}

.filter-tags {
  display: flex;
  flex-wrap: wrap;
  flex: 1;
}

.filter-tag {
  background-color: #f0f8ff;
  border-radius: 30rpx;
  padding: 6rpx 20rpx;
  margin: 10rpx 10rpx 10rpx 0;
  font-size: 26rpx;
  color: #0066cc;
  display: flex;
  align-items: center;
}

.clear-tag {
  margin-left: 10rpx;
  color: #999;
  font-size: 24rpx;
}

.clear-all-filters {
  font-size: 26rpx;
  color: #ff6666;
  padding: 10rpx;
  white-space: nowrap;
}

/* 日期范围选择栏 */
.date-range-bar {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.date-picker {
  height: 60rpx;
  min-width: 200rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f9f9f9;
  padding: 0 10rpx;
}

.date-separator {
  margin: 0 10rpx;
  color: #999;
}

.date-search-btn {
  margin-left: 20rpx;
  height: 60rpx;
  font-size: 24rpx;
  line-height: 60rpx;
  background-color: #07c160;
  color: #fff;
  padding: 0 20rpx;
  border-radius: 30rpx;
}

/* 快速日期选择器 */
.quick-date-selector {
  display: flex;
  overflow-x: auto;
  padding: 15rpx 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  white-space: nowrap;
}

.quick-date-btn {
  height: 60rpx;
  min-width: 120rpx;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 30rpx;
  margin-right: 15rpx;
  padding: 0 20rpx;
  flex-shrink: 0;
  background-color: #f9f9f9;
}

.quick-date-btn.active {
  background-color: #07c160;
  color: #fff;
  border-color: #07c160;
}

/* 统计信息卡片 */
.statistics-card {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 25rpx 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.statistics-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.statistics-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.statistics-value {
  font-size: 34rpx;
  font-weight: 600;
}

.income {
  color: #4CAF50;
}

.expense {
  color: #F44336;
}

/* 账目列表区域 */
.account-list-scroll {
  flex: 1;
  width: 100%;
  height: calc(100vh - 380rpx) !important;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: visible !important;
  z-index: 5;
  position: relative;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.account-list {
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}

.account-item {
  display: flex !important;
  justify-content: space-between !important;
  width: 100% !important;
  background-color: #fff !important;
  border-radius: 12rpx !important;
  padding: 25rpx 20rpx !important;
  margin-bottom: 20rpx !important;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1) !important;
  box-sizing: border-box !important;
  position: relative !important;
  z-index: 10 !important;
}

.account-left {
  flex: 1;
}

.account-info {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin-bottom: 8rpx;
}

.account-store {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-right: 15rpx;
}

.account-type {
  font-size: 24rpx;
  color: #666;
  background-color: #f2f2f2;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.account-user {
  font-size: 24rpx;
  color: #666;
  margin-left: 15rpx;
  background-color: #f0f0f0;
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
  display: inline-block;
}

.account-detail {
  display: flex;
  flex-direction: column;
}

.account-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 6rpx;
}

.account-remark {
  font-size: 26rpx;
  color: #666;
}

.account-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: space-between;
}

.account-amount {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.account-actions {
  display: flex;
}

.action-edit, .action-delete {
  font-size: 24rpx;
  color: #4284f5;
  padding: 6rpx 12rpx;
  margin-left: 10rpx;
}

.action-delete {
  color: #F44336;
}

/* 加载状态 */
.loading-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 26rpx;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4CAF50;
  border-radius: 50%;
  margin-right: 15rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.no-more-data {
  text-align: center;
  color: #999;
  font-size: 26rpx;
  padding: 30rpx 0 50rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
  box-sizing: border-box;
  width: 100%;
}

.empty-icon {
  font-size: 120rpx;
  color: #cccccc;
  margin-bottom: 40rpx;
  text-align: center;
}

.empty-text {
  font-size: 32rpx;
  color: #999999;
  margin-bottom: 60rpx;
  text-align: center;
}

.add-account-btn {
  background-color: #4CAF50;
  color: white;
  padding: 20rpx 60rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
  border: none;
}

/* 底部添加按钮 */
.add-btns {
  position: fixed;
  bottom: 30rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  padding: 0 30rpx;
  z-index: 10;
}

.add-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  color: white;
  margin: 0 15rpx;
  box-shadow: 0 6rpx 10rpx rgba(0, 0, 0, 0.1);
  border: none;
}

.add-btn.income {
  background-color: #4CAF50;
}

.add-btn.expense {
  background-color: #F44336;
}

.add-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
}

/* 筛选弹窗 */
.filter-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.filter-modal.show {
  visibility: visible;
  opacity: 1;
}

.filter-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.filter-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.filter-modal.show .filter-content {
  transform: translateY(0);
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.filter-title {
  font-size: 34rpx;
  font-weight: 600;
}

.filter-close {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.filter-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.filter-section {
  margin-bottom: 25rpx;
}

.filter-label {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.filter-selector {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #f5f7fa;
  padding: 20rpx 30rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.arrow-down {
  font-size: 24rpx;
  color: #999;
}

.amount-range {
  display: flex;
  align-items: center;
}

.amount-range input {
  flex: 1;
  background-color: #f5f7fa;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.amount-separator {
  margin: 0 20rpx;
  color: #999;
}

.filter-footer {
  display: flex;
  padding: 20rpx 30rpx 50rpx;
  border-top: 1rpx solid #eee;
}

.filter-btn {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 45rpx;
  font-size: 32rpx;
  margin: 0 15rpx;
}

.filter-btn.reset {
  background-color: #f2f2f2;
  color: #666;
}

.filter-btn.apply {
  background-color: #4CAF50;
  color: white;
}

/* 详情弹窗样式 */
.detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.detail-modal.show {
  visibility: visible;
  opacity: 1;
}

.detail-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.detail-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0.9);
  width: 90%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 20rpx;
  transition: transform 0.3s;
  overflow: hidden;
}

.detail-modal.show .detail-content {
  transform: translate(-50%, -50%) scale(1);
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.detail-title {
  font-size: 34rpx;
  font-weight: 600;
}

.detail-close {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.detail-body {
  padding: 30rpx;
}

.detail-row {
  display: flex;
  margin-bottom: 20rpx;
  align-items: flex-start;
}

.detail-label {
  width: 120rpx;
  font-size: 28rpx;
  color: #666;
}

.detail-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
}

.detail-value.income {
  color: #4CAF50;
  font-weight: 600;
}

.detail-value.expense {
  color: #F44336;
  font-weight: 600;
}

.detail-value.remark {
  white-space: pre-wrap;
  line-height: 1.5;
}

.detail-footer {
  display: flex;
  padding: 20rpx 30rpx 40rpx;
  border-top: 1rpx solid #eee;
}

.detail-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 30rpx;
  margin: 0 15rpx;
}

.detail-btn.edit {
  background-color: #2196F3;
  color: white;
}

.detail-btn.delete {
  background-color: #F44336;
  color: white;
}

.search-input {
  flex: 1;
  height: 70rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  position: relative;
}

.search-input input {
  flex: 1;
  height: 70rpx;
  font-size: 28rpx;
  padding-right: 20rpx;
  color: #333;
}

/* 搜索历史区域 */
.search-history {
  background-color: #fff;
  padding: 20rpx;
  margin: 10rpx 0;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.search-history-header text {
  font-size: 28rpx;
  color: #666;
}

.clear-history {
  color: #07c160;
  font-size: 26rpx;
}

.search-history-list {
  display: flex;
  flex-wrap: wrap;
}

.search-history-item {
  background-color: #f5f5f5;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
  font-size: 26rpx;
  color: #333;
  display: flex;
  align-items: center;
}

.history-icon {
  margin-right: 10rpx;
  font-size: 24rpx;
}

.history-text {
  max-width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
} 