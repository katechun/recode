}

.bmi-marker {
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-bottom: 15rpx solid #333;
  position: absolute;
  top: 82rpx;
  transform: translateX(-50%);
}

.bmi-info {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.bmi-info-text {
  font-size: 22rpx;
  color: #666;
}

/* 图表头部 */
.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.chart-actions {
  display: flex;
}

.chart-toggle {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.chart-toggle text {
  margin-right: 10rpx;
}

/* 模态框基础样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: 24rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  padding: 0 10rpx;
}

.modal-body {
  padding: 24rpx;
  flex: 1;
  max-height: 60vh;
}

.modal-footer {
  padding: 20rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: center;
}

.modal-btn {
  padding: 16rpx 40rpx;
  background: #4caf50;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
  min-width: 160rpx;
  text-align: center;
}

