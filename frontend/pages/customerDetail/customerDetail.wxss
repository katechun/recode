/* pages/customerDetail/customerDetail.wxss */
.container {
  padding: 30rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

/* 顶部客户信息 */
.customer-header {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.customer-basic {
  margin-bottom: 20rpx;
}

.customer-name {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.customer-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
}

.store-name {
  background-color: #e6f7ff;
  color: #1890ff;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.phone {
  color: #999;
}

.weight-overview {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.weight-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.weight-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.weight-value {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.progress-section {
  margin-top: 10rpx;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.progress-label {
  font-size: 26rpx;
  color: #666;
}

.progress-percentage {
  font-size: 26rpx;
  color: #1890ff;
  font-weight: 500;
}

.progress-bar-container {
  width: 100%;
  height: 12rpx;
  background-color: #f5f5f5;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background-color: #1890ff;
  border-radius: 6rpx;
}

/* 选项卡 */
.tabs {
  display: flex;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #1890ff;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 4rpx;
  background-color: #1890ff;
  border-radius: 2rpx;
}

/* 内容区 */
.content-area {
  width: 100%;
}

.content-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 基本信息 */
.info-group {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.info-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
}

.notes {
  margin-bottom: 30rpx;
}

.notes .info-value {
  white-space: pre-wrap;
  word-break: break-all;
}

/* 体重记录 */
.chart-container {
  margin-bottom: 30rpx;
}

.chart-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.chart-area {
  width: 100%;
  height: 400rpx;
}

.weight-chart {
  width: 100%;
  height: 100%;
}

.record-list {
  width: 100%;
}

.record-header {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
}

.record-date-header {
  flex: 2;
  text-align: left;
}

.record-weight-header, .record-change-header {
  flex: 1;
  text-align: center;
}

.record-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 26rpx;
  color: #666;
}

.record-date {
  flex: 2;
  text-align: left;
}

.record-weight, .record-change {
  flex: 1;
  text-align: center;
}

.record-change.positive {
  color: #52c41a;
}

.record-change.negative {
  color: #f5222d;
}

/* 产品使用记录 */
.product-list {
  width: 100%;
}

.product-header {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
}

.product-name-header {
  flex: 2;
  text-align: left;
}

.product-date-header, .product-count-header {
  flex: 1;
  text-align: center;
}

.product-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 26rpx;
  color: #666;
}

.product-name {
  flex: 2;
  text-align: left;
}

.product-date, .product-count {
  flex: 1;
  text-align: center;
}

/* 按钮 */
.action-buttons {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}

.action-btn {
  width: 45%;
  font-size: 28rpx;
  border-radius: 8rpx;
  padding: 20rpx 0;
  text-align: center;
}

.action-btn.edit {
  background-color: #fff;
  color: #1890ff;
  border: 1rpx solid #1890ff;
}

.action-btn.export {
  background-color: #1890ff;
  color: #fff;
}

.action-btn.add {
  background-color: #1890ff;
  color: #fff;
  width: 60%;
}

/* 空提示 */
.empty-tip {
  text-align: center;
  color: #999;
  padding: 60rpx 0;
  font-size: 28rpx;
}

/* 加载中 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.7);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: #666;
  font-size: 28rpx;
} 