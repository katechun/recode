/* pages/login/login.wxss */
.container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 60rpx;
}

.logo image {
  width: 100%;
  height: 100%;
}

.login-form {
  width: 100%;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.error-msg {
  color: #ff4d4f;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  background-color: #1aad19;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.test-accounts {
  margin-top: 40rpx;
  text-align: center;
  color: #999;
  font-size: 24rpx;
}

.test-accounts-title {
  display: block;
  margin-bottom: 10rpx;
}

.test-account {
  display: block;
  margin-bottom: 6rpx;
}

.form-container {
  padding: 40rpx;
} 